<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#008B8B"
    android:background="#008B8B"
    android:clickable="true">

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:background="#FFFFFF"
        android:clickable="true"
        android:enabled="true"
        android:padding="15dp"
        android:showText="true"
        android:thumbTint="#a317ad"
        android:checked="false"
        android:textOn="Social"
        android:textOff="Antisocial"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mySwitch"
        android:layout_marginTop="22dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/switchStatus"
        android:layout_toEndOf="@+id/switchStatus"
        android:indeterminateOnly="false"
        android:indeterminate="false"
        android:progressBackgroundTint="#64e6d7"
        android:progressTint="#db5656"
        android:id="@+id/progressBar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Three Strikes and you're out!"
        android:id="@+id/textView"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/switchStatus"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rude!"
        android:id="@+id/textView2"
        android:focusable="false"
        android:textColor="#FFFFFF"
        android:textSize="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/mySwitch"
        android:layout_alignStart="@+id/mySwitch"
        android:layout_marginTop="55dp"
        android:textIsSelectable="false"
        android:typeface="serif" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />


</RelativeLayout>