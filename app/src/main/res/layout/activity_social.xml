<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#008B8B"
    android:background="#008B8B"
    android:clickable="true"
    android:id="@+id/social_screen">

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:background="#FFFFFF"
        android:clickable="true"
        android:enabled="true"
        android:padding="15dp"
        android:showText="true"
        android:thumbTint="#a317ad"
        android:checked="true"
        android:textOn="Social"
        android:textOff="Antisocial"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mySwitch"
        android:layout_marginTop="22dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/start_button"
        android:text="Start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tableRow"
        android:layout_alignRight="@+id/tableRow"
        android:layout_alignEnd="@+id/tableRow"
        android:background="#9d48cc"
        android:textColor="#FFFFFF" />
    <TableLayout
        android:padding="10dip"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout2"></TableLayout>

    <TableRow
        android:layout_below="@+id/switchStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:id="@+id/tableRow"
        android:weightSum="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TableRow>

    <TextView
        android:id="@+id/timer"
        android:text="Time Left: "
        android:paddingRight="10dip"
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        android:layout_weight="54.07"
        android:layout_alignRight="@+id/tableRow"
        android:layout_alignEnd="@+id/tableRow"
        android:layout_below="@+id/start_button"
        android:layout_toRightOf="@+id/switchStatus"
        android:layout_toEndOf="@+id/switchStatus"
        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Go talk to your friends or do something wild."
        android:id="@+id/textView5"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/tableLayout2"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:typeface="serif"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="100"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:id="@+id/score"
        android:layout_alignTop="@+id/switchStatus"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
